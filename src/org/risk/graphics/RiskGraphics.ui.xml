<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
  xmlns:g="urn:import:com.google.gwt.user.client.ui"
   xmlns:svgui='urn:import:org.vectomatic.dom.svg.ui'
   xmlns:mgwt="urn:import:com.googlecode.mgwt.ui.client.widget" xmlns:m="urn:import:com.googlecode.mgwt.ui.client">
   
  <ui:with field='resources' type='org.risk.graphics.MapSVG' />
  <mgwt:LayoutPanel ui:field="main">
    <mgwt:HeaderPanel ui:field="headerPanel" />
    <mgwt:ScrollPanel ui:field="display">
      <g:VerticalPanel ui:field="mapWrapper">
        <g:HTML ui:field="mapContainer"/>
      </g:VerticalPanel>
    </mgwt:ScrollPanel>
    <mgwt:buttonbar.ButtonBar ui:field="footerBar">
      <mgwt:buttonbar.InfoButton ui:field="instructions" />
      <mgwt:buttonbar.ButtonBarSpacer />
      <mgwt:RoundPanel ui:field="notification" visible="false" />
      <mgwt:buttonbar.ButtonBarSpacer />
      <mgwt:buttonbar.ActionButton ui:field="playersInfo" />
    </mgwt:buttonbar.ButtonBar>
  </mgwt:LayoutPanel>
</ui:UiBinder> 